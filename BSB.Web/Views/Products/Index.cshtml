@model IEnumerable<BSB.Data.Entity.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Book Shop:</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create Book</a>
    <a class="btn btn-primary" asp-action="GroupBooks">Group Books into Genres</a>
</p>
<p>
    <form asp-controller="Products" asp-action="Index">
        <p>
    Book Name: <input type="text" name="SearchString" />
    <input placeholder="Book Name" class="btn btn-secondary" type="submit" value="Filter" />
        </p>
    </form>

</p>

        <p>
            <a class="btn btn-primary" asp-action="Index">All Books</a>
            <a class="btn btn-primary" asp-action="Index" asp-route-rent="true">Buy Books</a>
            <a class="btn btn-primary" asp-action="Index" asp-route-rent="false">Rent Books</a>
        </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsForBuy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img width="140" height="80" src="@item.Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsForBuy)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="AddToCart"
                       asp-controller="ShoppingCart"
                       asp-route-id="@item.Id">Add To Cart</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
