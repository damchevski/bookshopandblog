@using Microsoft.AspNetCore.Identity
@inject SignInManager<BSB.Data.Entity.BSBUser> SignInManager
@inject UserManager<BSB.Data.Entity.BSBUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="font-size: 18px">
            <a class="nav-link text-dark" asp-controller="Chat" asp-action="Index" title="Posts">Chat</a>
        </li>
        <li class="nav-item" style="font-size: 18px">
            <a class="nav-link text-dark" asp-controller="Posts" asp-action="Index" title="Posts">Blog</a>
        </li>
        <li class="nav-item" style="font-size: 18px">
            <a class="nav-link text-dark" asp-controller="Order" asp-action="GetOrders" title="Orders">Orders</a>
        </li>
        <li class="nav-item" style="font-size: 18px">
            <a class="nav-link text-dark" asp-controller="ShoppingCart" asp-action="GetCartInfo" title="ShoppingCart">Shopping Cart</a>
        </li>
        <li class="nav-item" style="font-size: 18px">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" style="font-size: 18px" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="font-size: 18px">
            <a class="nav-link text-dark" asp-controller="account" asp-action="Register">Register</a>
        </li>

        <li class="nav-item" style="font-size: 18px">
            <a class="nav-link text-dark" asp-controller="account" asp-action="login">Login</a>
        </li>
    }
</ul>